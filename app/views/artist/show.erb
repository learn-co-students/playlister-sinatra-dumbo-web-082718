<h2>Songs by <%= @artist.name %></h2>

<ol>
  <% @artist.songs.each do |song_instance| %>
    <li><a href="/songs/<%= song_instance.slug %>"><%=song_instance.name%></a></li>
  <% end %>
</ol>

<h2>Genres by <%= @artist.name %></h2>

<ol>
  <% @artist.genres.each do |genre| %>
    <li><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></li>
  <% end %>
</ol>
