<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Song//<%= @song.name %></h1>
<h3><a href="/songs/<%=@song.slug%>/edit">Edit Song</a></h3>

<h3>Artist:</h3>
<p><a href="/artists/<%=@artist.slug%>"><%=@artist.name%></a>

<h3>Genres:</h3>
<ul>
<% @genres.each do |genre| %>
<li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a> </li>
<% end %>
</ul>
